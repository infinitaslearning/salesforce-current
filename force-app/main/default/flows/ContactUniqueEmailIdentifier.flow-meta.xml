<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>53.0</apiVersion>
    <assignments>
        <name>BeforeSaveContactValueAssignments</name>
        <label>Before Save Contact Value Assignments</label>
        <locationX>176</locationX>
        <locationY>311</locationY>
        <assignmentItems>
            <assignToReference>$Record.UniqueEmailId__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>UniqueEmailIdFormulaPlantynOnly</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <description>This flow creates a unique value the Contact combining the Operating Company and Email values</description>
    <formulas>
        <name>UniqueEmailIdFormula</name>
        <dataType>String</dataType>
        <expression>{!OperatingCompany}&amp;&apos;-&apos;&amp;{!ContactEmailIdentifier}</expression>
    </formulas>
    <formulas>
        <name>UniqueEmailIdFormulaPlantynOnly</name>
        <dataType>String</dataType>
        <expression>IF(CONTAINS(TEXT({!$Record.OperatingCompany__c}), &quot;Plantyn&quot;), 
TEXT({!$Record.OperatingCompany__c})&amp;&apos;-&apos;&amp;IF(ISBLANK({!$Record.Email}), {!$Record.Id}, {!$Record.Email}), 
&quot;&quot;)</expression>
    </formulas>
    <interviewLabel>Contact Unique Email Identifier {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Contact Unique Email Identifier</label>
